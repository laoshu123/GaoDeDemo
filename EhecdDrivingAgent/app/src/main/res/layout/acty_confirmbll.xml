<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <include layout="@layout/include_titlebar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="#F7F7F7"
        android:textSize="@dimen/sp13"
        android:textColor="@color/black45"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="温馨提示：请提醒客户进行账单确认并进行支付"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:textSize="@dimen/sp14"
            android:textColor="#BB2822"
            android:gravity="center"
            android:text="100.00元"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F7F7F7"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tvDetailed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp13"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:text="计费明细"/>

            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp13"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp70"
                android:text="行程详情"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/tvQrcode"
            android:layout_width="@dimen/dp180"
            android:layout_height="@dimen/dp180"
            android:layout_marginTop="@dimen/dp50"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp50"
            android:gravity="center">
            <Button
                android:id="@+id/btnOnLine"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40"
                android:background="@drawable/selector_bk_radius_200"
                android:textColor="#4A4C5A"
                android:layout_marginRight="@dimen/dp50"
                android:textSize="@dimen/sp13"
                android:text="线上收款"/>

            <Button
                android:id="@+id/btnOffline"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40"
                android:background="@drawable/selector_login"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp13"
                android:text="线下收款"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>