<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llOpen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="#F7F7F7"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp13"
            android:textColor="@color/black"
            android:drawableRight="@mipmap/icon_right1"
            android:text="2021年7月"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp5">
            <TextView
                android:id="@+id/tvShouyi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp12"
                android:textColor="@color/black35"
                android:text="收益：￥99999.00"/>

            <TextView
                android:id="@+id/tvZhiChu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp12"
                android:textColor="@color/black35"
                android:gravity="center"
                android:text="支出：￥99999.00"/>

            <TextView
                android:id="@+id/tvTiXian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp12"
                android:textColor="@color/black35"
                android:gravity="right"
                android:text="提现：￥99999.00"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>

    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"/>



</LinearLayout>